{
  "npm": false,
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "${version}"
  },
  "github": {
    "release": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    },
    "@release-it/bumper": {
      "in": "VERSION",
      "out": [
        "lib/devise/rownd/version.rb",
        "README.md",
        "VERSION"
      ]
    }
  },
  "hooks": {
    "after:github:release": [
      "bundle exec rake release"
    ]
  }
}
